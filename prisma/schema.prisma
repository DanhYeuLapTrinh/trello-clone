generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Owner
  Admin
  Member
}

enum BoardBackground {
  OCEAN
  SUNSET
  FOREST
  ROYAL_PURPLE
  GOLDEN
  FIRE
  SKY
  ROSE
  AQUA
  GRAY
}

enum BoardVisibility {
  PUBLIC
  WORKSPACE
  PRIVATE
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspaceMemberships WorkspaceMember[]
  ownedBoards          Board[]           @relation("BoardOwner")
  memberships          BoardMember[]
  cardAssignees        CardAssignee[]
  comments             Comment[]

  @@map("users")
}

model Workspace {
  id          String   @id @default(uuid())
  name        String   @unique
  shortName   String   @unique
  websiteUrl  String?
  description String?
  imageUrl    String?
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  memberships WorkspaceMember[]
  boards      Board[]

  @@map("workspaces")
}

model WorkspaceMember {
  id   String @id @default(uuid())
  role Role   @default(Member)

  workspaceId String
  userId      String

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

model Board {
  id          String          @id @default(uuid())
  name        String          @unique
  description String?
  background  BoardBackground @default(OCEAN)
  visibility  BoardVisibility @default(WORKSPACE)
  slug        String          @unique
  isDeleted   Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  ownerId String
  owner   User   @relation("BoardOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  memberships BoardMember[]
  lists       List[]
  labels      Label[]

  @@map("boards")
}

model BoardMember {
  id   String @id @default(uuid())
  role Role   @default(Member)

  boardId String
  userId  String

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([boardId, userId])
  @@map("board_members")
}

model List {
  id        String   @id @default(uuid())
  name      String   @unique
  position  Int
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards   Card[]

  @@map("lists")
}

model Card {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  description String?
  position    Int
  startDate   DateTime?
  endDate     DateTime?
  dueDate     DateTime?
  isDeleted   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  listId   String
  list     List      @relation(fields: [listId], references: [id], onDelete: Cascade)
  subtasks Subtask[]

  assignees   CardAssignee[]
  comments    Comment[]
  attachments Attachment[]
  cardLabels  CardLabel[]

  @@map("cards")
}

model Subtask {
  id     String  @id @default(uuid())
  title  String
  isDone Boolean @default(false)

  cardId   String
  card     Card      @relation(fields: [cardId], references: [id], onDelete: Cascade)
  parentId String?
  parent   Subtask?  @relation("Subtasks", fields: [parentId], references: [id])
  children Subtask[] @relation("Subtasks")

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subtasks")
}

model CardAssignee {
  id String @id @default(uuid())

  cardId String
  userId String

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([cardId, userId])
  @@map("card_assignees")
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cardId String
  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Label {
  id        String   @id @default(uuid())
  title     String?
  color     String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  boardId String?
  board   Board?  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  cardLabels CardLabel[]

  @@map("labels")
}

model CardLabel {
  id String @id @default(uuid())

  cardId  String
  labelId String

  card  Card  @relation(fields: [cardId], references: [id], onDelete: Cascade)
  label Label @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([cardId, labelId])
  @@map("card_labels")
}

model Attachment {
  id        String   @id @default(uuid())
  url       String   @unique
  fileName  String?  @unique
  fileType  String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())

  cardId String
  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@map("attachments")
}
